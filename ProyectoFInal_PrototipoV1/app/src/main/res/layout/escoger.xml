<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.example.proyectofinal_prototipov1.Configuracion
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/configuracion"
        app:casa="true"
        app:pausar="false"
        app:musica="lauvparis"
        app:tiempopuntaje="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textSent"
        android:text="Localiza lo que se te pide en el mapa"
        android:textSize="21dp"
        android:textAlignment="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/courier"/>

    <com.example.proyectofinal_prototipov1.Escoger
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/escoger" />

</LinearLayout>