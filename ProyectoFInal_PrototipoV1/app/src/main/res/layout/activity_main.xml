<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/emblema"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="140dp"
            android:src="@drawable/emblema" />

        <ImageButton
            android:id="@+id/sonido"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:src="@drawable/sonido2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seccion"
        android:layout_below="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp">

        <ImageButton
            android:id="@+id/jugar"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/jugar2"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/tutorial"
            android:layout_below="@id/jugar"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/tutorial"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/creditos"
            android:layout_below="@id/jugar"
            android:layout_toRightOf="@id/tutorial"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/creditos"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/carrera"
            android:layout_below="@id/tutorial"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/trayectoj"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/logros"
            android:layout_below="@id/carrera"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/logros3"
            android:background="@android:color/transparent" />
    </RelativeLayout>
</RelativeLayout>
