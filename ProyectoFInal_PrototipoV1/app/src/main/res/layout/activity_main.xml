<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
    android:id="@+id/encabezado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <ImageButton
            android:id="@+id/usuario"
            android:layout_alignParentStart="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/jugador"/>

    <ImageView
        android:id="@+id/emblema"
        android:layout_toRightOf="@+id/usuario"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/emblema"
        />

        <ImageButton
            android:id="@+id/notificacion"
            android:layout_marginLeft="90dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/activo"/>





</RelativeLayout>

    <RelativeLayout
        android:id="@+id/seccion"
        android:layout_below="@+id/encabezado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"
        >

        <ImageButton
            android:id="@+id/jugar"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/jugar2"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/nuevapart"
            android:layout_below="@+id/jugar"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/juegonuevo"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/creditos"
            android:layout_below="@+id/jugar"
            android:layout_toRightOf="@+id/nuevapart"
            android:layout_width="170dp"
            android:layout_height="110dp"
            android:src="@drawable/creditos"
            android:background="@android:color/transparent"
            />

        <ImageButton
            android:id="@+id/carrera"
            android:layout_below="@+id/nuevapart"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/trayectoj"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/navegador"
        android:layout_below="@+id/seccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        >

        <ImageButton
            android:id="@+id/inicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_alignParentStart="true"
            android:src="@drawable/casa"
            />

        <ImageButton
            android:id="@+id/logro"
            android:layout_toRightOf="@+id/inicio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:layout_marginLeft="110dp"
            android:src="@drawable/logro"
            />

        <ImageButton
            android:id="@+id/ajustes"
            android:layout_toRightOf="@+id/logro"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="90dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/engranaje"
            />


    </RelativeLayout>

</RelativeLayout>